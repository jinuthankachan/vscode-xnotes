{
  "name": "xnotes",
  "displayName": "XNotes",
  "description": "Encrypted note-taking with Git sync in VS Code.",
  "version": "0.1.0",
  "publisher": "jinuthankachan",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:xnotes.setup"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^18.11.18",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "vsce": "^2.10.0"
  },
  "dependencies": {
    "fs-extra": "^11.1.1",
    "simple-git": "^3.19.1"
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "xnotesContainer",
          "title": "XNotes",
          "icon": "resources/xnotes-icon.svg"
        }
      ]
    },
    "views": {
      "xnotesContainer": [
        {
          "id": "xnotesView",
          "name": "XNotes"
        }
      ]
    },
    "commands": [
      {
        "command": "xnotes.setup",
        "title": "Setup Notes Directory",
        "icon": "$(gear)"
      },
      {
        "command": "xnotes.newNote",
        "title": "New Note",
        "icon": "$(add)"
      },
      {
        "command": "xnotes.newFolder",
        "title": "New Folder",
        "icon": "$(new-folder)"
      },
      {
        "command": "xnotes.deleteItem",
        "title": "Delete",
        "icon": "$(trash)"
      },
      {
        "command": "xnotes.sync",
        "title": "Sync to Remote",
        "icon": "$(sync)"
      },
      {
        "command": "xnotes.openNote",
        "title": "Open Note"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "xnotes.setup",
          "when": "view == xnotesView",
          "group": "navigation"
        },
        {
          "command": "xnotes.newNote",
          "when": "view == xnotesView",
          "group": "navigation"
        },
        {
          "command": "xnotes.sync",
          "when": "view == xnotesView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "xnotes.deleteItem",
          "when": "view == xnotesView",
          "group": "inline"
        }
      ]
    }
  }
}
